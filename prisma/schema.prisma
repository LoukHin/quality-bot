generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Music {
  id        Int         @id @default(autoincrement())
  guildId   String
  youtubeId String
  userId    String
  status    MusicStatus @default(UNPLAYED)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Reminder {
  id          Int      @id @default(autoincrement())
  name        String
  remindAt    DateTime
  userId      String
  guildId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([id, guildId, userId])
}

model ChannelBinding {
  id            Int      @id @default(autoincrement())
  guildId       String
  channelId     String
  bindedCommand Command
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([guildId, channelId])
  @@unique([guildId, bindedCommand])
}

enum Command {
  FILECONVERTER
  REMINDER
  MUSIC
}

enum MusicStatus {
  UNPLAYED
  PLAYING
  PAUSED
  PLAYED
}
